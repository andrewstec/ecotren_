@model IEnumerable<EcoTrend_Industry_Project.ViewModels.ContactVM>

@{
    ViewBag.Title = "Contact Management Area";
    if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("admin"))
        {
            Layout = "~/Views/Shared/_AdminLayout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
    }

}

<div class="row">
    <div class="col-md-12">
        <h2>Contact Management Area</h2>
    </div>
</div>

<div class="row">
    <div class="hidden-xs hidden-sm col-md-12 col-lg-12">
        <div style="display: inline-block">
            <input class="input input-sm" placeholder="Comapny or Sales Rep. Name" />
            <button class="btn btn-primary">Search</button>
            <br /><br />
        </div>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ContactID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telephone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Branch)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StoreID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StoreName)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Branch)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreName)
                    </td>
                    <td><a href="../SalesRep/EditContact"><span class="glyphicon glyphicon-pencil" title="Edit Contact"></span></a></td>
                    <td><a href="../SalesRep/ContactNotes"><span class="glyphicon glyphicon-list-alt" title="View Notes"></span></a></td>
                    <td>
                        <a href="@Url.Action("AddNote", "SalesRep", new { contactID = item.ContactID })">
                            <span class="glyphicon glyphicon-plus" title="Add Note"></span>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>