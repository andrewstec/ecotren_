@model EcoTrend_Industry_Project.ViewModels.ContactVM

@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
