@model EcoTrend_Industry_Project.ViewModels.LogContactVM

@{
    ViewBag.Title = "Delete Log";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<input type="hidden" value="@Model.logID" />
<h2>Delete A Log</h2>
<span>Are you sure you want to delete this log?</span>
<div class="col-sm-12">
    
    <div class="col-sm-4">
        @using (Html.BeginForm("DeleteLog", "Admin", new { @class= "form-horizontal" }))
        {
            <input class="btn btn-danger" type="submit" name="result" value="Yes" />
        }
    </div>
    <div class="col-sm-4">
        @using (Html.BeginForm("DeleteLog", "Admin", new { @class = "form-horizontal" }))
        {
            <input class="btn btn-default" type="submit"name="result" value="Go Back" />
        }
    </div>
</div>