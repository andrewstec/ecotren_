@model EcoTrend_Industry_Project.ViewModels.LogContactVM

@{
    ViewBag.Title = "EditLog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Log</h2>

@using (Html.BeginForm("EditLog", "Admin", FormMethod.Post, new { @class = "form-horizontal"}))
{
    <div class="form-group">
        <label class="col-sm-2 control-label">Log ID</label>
        <div class="col-sm-6">
            <input class="form-control" id="disabledInput" type="text" placeholder="@Model.logID" disabled>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Date Created</label>
        <div class="col-sm-6">
            <input class="form-control" id="disabledInput" type="text" placeholder="@Model.logDate" disabled>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Sales Representative ID</label>
        <div class="col-sm-6">
            <input class="form-control" id="disabledInput" type="text" placeholder="@Model.salesRepID" disabled>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Contact ID</label>
        <div class="col-sm-6">
            <input class="form-control" id="disabledInput" type="text" placeholder="@Model.contactID" disabled>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Contact Name</label>
        <div class="col-sm-6">
            <input class="form-control" id="disabledInput" type="text" placeholder="@Model.contactName" disabled>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Store Name</label>
        <div class="col-sm-6">
            <input class="form-control" id="disabledInput" type="text" placeholder="@Model.storeName" disabled>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Title</label>
        <div class="col-sm-6">
            <input class="form-control" name="title" value="@Model.title" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Body</label>
        <div class="col-sm-6">
            <textarea class="form-control" name="body" rows="5">@Model.body</textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-6">
            <input type="submit" class="btn btn-primary btn-block" value="Edit" data-loading-text="Committing changes..."/>
        </div>
    </div>
}